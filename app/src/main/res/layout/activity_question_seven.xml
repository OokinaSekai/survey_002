<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question_7"
        android:layout_margin="10dp"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In which condition will you buy a new phone?"
        android:textSize="20dp"
        android:layout_margin="20dp"

        />

    <CheckBox
        android:id="@+id/cbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone has been used for a year or two.(but it still works)"
        android:layout_marginLeft="50dp"

        />

    <CheckBox
        android:id="@+id/cbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone has been used for more than three years.(but it still works)"
        android:layout_marginLeft="50dp"
        />

    <CheckBox
        android:id="@+id/cbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone breaks down."
        android:layout_marginLeft="50dp"
        />

    <CheckBox
        android:id="@+id/cbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When a new phone is released."
        android:layout_marginLeft="50dp"
        />

    <CheckBox
        android:id="@+id/cbox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="others"
        android:layout_marginLeft="50dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickBtn"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:text="NEXT"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- END    : Your code should be within this block -->

</LinearLayout>
